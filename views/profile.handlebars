<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-3">
      <h2>Welcome, {{name}}!</h2>
    </div>
  </div>

  <div class="row mt-4">
    <!-- Create a New Blog Post Section -->
    <div class="col-md-5">
      <h3>Create a New Blog Post</h3>

      <form class="form new-project-form">
        <div class="form-group">
          <label for="project-name">Title:</label>
          <input class="form-control" type="text" id="project-name" name="project-name" />
        </div>
        <div class="form-group">
          <label for="project-desc">Description:</label>
          <textarea class="form-control" id="project-desc" name="project-desc" rows="5"></textarea>
        </div>
        <div class="form-group text-right">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>

    <!-- Blog Posts Section -->
    <div class="col-md-7">
      <h3>Your Blog Posts</h3>

      {{#if projects.length}}
      <div class="project-list">
        {{#each projects as |project|}}
        <div class="row mb-2 p-3 border rounded">
          <div class="col-md-8">
            <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
            <p>{{project.description}}</p>
          </div>
          <div class="col-md-4 text-right">
            <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <p>No projects found.</p>
      {{/if}}
    </div>
  </div>
</div>

<script src="./js/profile.js"></script>

